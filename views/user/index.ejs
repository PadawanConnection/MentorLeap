<div class='container'>
  <div>
    <h1>Index of Users</h1>
  </div>
  <div>
    <table class="table">
    <tr>
      <th>User Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% _.each(users, function(user){ %>
    <tr data-id="<%= user.id %>" data-model='user'>
      <td><%= user.username %></td>
      <td><a href="user/show/<%=user.id%>" class='btn btn-small btn-primary'>Show</a></td>
      <td><a href="user/edit/<%=user.id%>" class='btn btn-small btn-warning'>Edit</a></td>
      <td><form action="user/destroy/<%=user.id%>" method='POST'>
        <input type="hidden" name="_method" value="delete">
        <input type="submit" class="btn btn-small btn-danger" value="Delete">
      </form></td> 
    </tr>
    <% })%>
    </table>
  </div>
</div>

